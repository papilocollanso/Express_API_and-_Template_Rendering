<h1 class="text-primary mt-3 text-center">{{title}}</h1>
<form action="/api/members" method="POST" class=" container mb-4">

    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" class="form-control" />
    </div><br>
    <div class="d-grid gap-2">
        <input type="submit" value="Add Member" class="btn btn-primary " />
    </div>
</form>
<h4 class="container text-center">Members</h4>
<ul class="container list-group">
    {{#each member}}
    <li class="list-group-item text-center">
        {{this.name}}: {{this.email}}
    </li>
    {{/each}}
</ul>
<div class="container text-center fw-bolder">
    <p class="fw-bolder"><a href="/api/members" class="btn btn-light mt-4 text-danger text-center">Visit Api</a></p>
</div>